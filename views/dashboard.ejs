<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <%- include("./partials/extensions.ejs") %>
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <h2>Makalelerim</h2>
    <hr />

    <% if (articles != "") { %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Başlık</th>
          <th scope="col">Yazar</th>
          <th scope="col">İçerik</th>
          <th scope="col">Oluşturulma Tarihi</th>
          <th scope="col">Güncelle</th>
          <th scope="col">Sil</th>
        </tr>
      </thead>
      <tbody>
        <% articles.forEach((value) => { %>
        <tr>
          <th scope="row"><%- value._id %></th>
          <td><%- value.title %></td>
          <td><%- value.author%></td>
          <td><%- value.content%></td>
          <td><%- value.created_date.toLocaleDateString()%></td>
          <td><a href="#" class="btn btn-warning"> Güncelle</a></td>
          <td><a href="#" class="btn btn-danger"> Sil</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% }%> <% if (articles == "") {%>
    <div class="alert alert-danger">Hiç Makalen Bulunmuyor</div>
    <%}%>
  </body>
</html>
