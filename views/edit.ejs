<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <%- include("./partials/extensions.ejs") %>
  </head>
  <body>
    <%- include("./partials/navbar.ejs") %>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <h3>Makale Düzenle</h3>
          <hr />
          <% article.forEach(element => { %>
            <form method="POST">
            <label for="title"> Başlık:</label> <br />
            <input type="text" name="title" class="form-control"  value="<%- element.title%>"/>
            <label for="title"> İçerik:</label> <br />
            <textarea  name="content" class="form-control"  /><%- element.content %></textarea>
            <button class="btn btn-danger mt-2" type="submit">Makaleyi Güncelle</button>
          </form>
          <% }) %>
         
        </div>
      </div>
</div>
  </body>
</html>
